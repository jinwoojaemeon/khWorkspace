package com.jdbc.lifegame.common;

import com.jdbc.lifegame.model.vo.LifeCharacter;

public class UiTemplate {
	public static void line() {
		System.out.println("=============================================");
	}
	
	public static String basicStat(LifeCharacter life) {
		return "이름 : " + life.getCharacterName() + "    나이 : " + life.getAge();
	}
	
	public static String abilityStat(LifeCharacter life) {
		return "지능: " + life.getIntelligence() + "   체력: " + life.getStamina() + "   운 : " + life.getLuck() + "    자본 : " + life.getMoney();
	}
	
	public static String experienceStat(LifeCharacter life) {
		return "알바 경력: " + life.getPartTimeExp() + "  회사 경력: " + life.getEmployeeExp() + "  노가다 경력: " + life.getLaborerExp()
		 				+ "\n  트레이너 경력: " + life.getTrainerExp() + "  운동선수 경력: " + life.getAthleteExp();  
	}
}
